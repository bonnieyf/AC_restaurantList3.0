
<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" value="{{keyword}}" aria-label="Restaurant Name..." value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-4">
          <select class="custom-select" name="sortBy" onchange="window.location=`/sort/${this.value}`">
            <option selected>Sort by</option>
            <option value="name_asc">餐廳名(A-Z)</option>
            <option value="name_desc">餐廳名(Z-A)</option>
            <option value="category">餐廳類型</option>
            <option value="rating">餐廳評分</option>
          </select>
    </div>
    <div class="col-md-6">
      <a href="/" class="btn btn-major" style="float:right;">Back</a>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each shops}}
          <div class="card mb-3">
            <a href="/shops/{{this._id}}" class="text-secondary"></a>
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

            </div>
          </a>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>